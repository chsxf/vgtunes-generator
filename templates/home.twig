{% extends 'main-pages-base.twig' %}

{% block header %}
	<h1 class="align-left">Latest Additions</h1>

	<div class="buttons-container">
		<a href="https://bit.ly/vgtunes-album-submission" id="submit-album-button" class="button" target="_blank">Submit an album</a>
		<a href="https://bit.ly/vgtunes-error-report" id="report-error-button" class="button" target="_blank">Report an error</a>
	</div>
{% endblock %}

{% block content %}
	<div class="flex-grid scrollview">
		{% for album in latest_albums %}
			{% set cover_url = "%s%s/cover_250.webp"|format(base_cover_url, album.slug) %}
			<a class="album" style="background-image: url('{{ cover_url }}')" href="{{ base_album_url }}{{ album.slug }}/" title="{{ album.title }} - {{ album.artist }}">
				<div class="blurry-background" style="background-image: url('{{ cover_url }}')"></div>
			</a>
		{% endfor %}
	</div>
{% endblock %}
