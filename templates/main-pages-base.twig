<!DOCTYPE html>
<html lang="en">
	<head>
		<title>
			{% block title %}{% endblock %}VGTunes |
			{{ site_tagline }}</title>
		<meta name="description" content="{{ site_description }}">
		<link rel="preload" href="/css/main-style.css?t={{ git_hash_cache.getHash('css/main-style.css') }}" as="style">
		<link href="/css/main-style.css?t={{ git_hash_cache.getHash('css/main-style.css') }}" rel="stylesheet">
		<script src="/js/search.js?t={{ git_hash_cache.getHash('js/search.js') }}" defer></script>

		<meta property="og:site_name" content="VGTunes">
		<meta property="og:title" content="VGTunes">
		<meta property="og:image" content="{{ base_url }}images/logo-white-background-512px.png">
		<meta property="og:url" content="{{ base_url }}">
		<meta property="og:description" content="{{ site_description }}">

		{{ include('common-head.twig') }}

		{% block head %}{% endblock %}
	</head>
	<body>
		<div id="main-container">
			<div id="search-cancel"></div>

			<div id="header">
				<div class="column">
					<div class="logo">
						<a href="/"><img src="/images/logo-icon-white-128px.png" alt="VGTunes Logo">
							VGTunes</a>
					</div>
					<div class="search">
						<img src="/images/looking-glass.svg" class="looking-glass" alt="Search">
						<input type="text" id="search-terms" placeholder="Loading search index..." disabled>
						<div id="results-dropdown">
							<ul id="results-list">
								<li class="no-result">No results found</li>
							</ul>
						</div>
					</div>
				</div>
			</div>

			<div id="main-section">
				{% block topbar %}
					<div id="top-bar-container">
						<div class="column">
							{% block header %}{% endblock %}
						</div>
					</div>
				{% endblock %}

				{% block content %}{% endblock %}
			</div>

			<div id="footer">
				<div class="column">{{ include('legal-footer.twig') }}</div>
			</div>
		</div>
	</body>
</html>
